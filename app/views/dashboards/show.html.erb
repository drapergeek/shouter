<h1>Dashboard</h1>
Welcome <%= current_user.email %>! <%= link_to "Sign Out", sign_out_path, method: :delete %>
<%= form_for @text_shout do |f| %>
  <%= f.text_field :body, placeholder: "Shout here" %>
  <%= f.submit "Shout!" %>
<% end %>

<strong>Add a photo shout</strong>
<%= form_for @photo_shout do |f| %>
  <%= f.file_field :photo %>
  <%= f.submit "Shout!" %>
<% end %>

<div id="shouts">
  <%= render @shouts %>
</div>
